---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Services Offered</div>
  </div>

  <HorizontalCard
    title="Backend Developer"
    img="/backend.png"
    desc="Desarrollo de microservicios, API's, server logic, conexiones con bases de datos y 3rd party connections."
    badge="NodeJs, Express, Django"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Frontend Developer"
    img="/frontend.png"
    desc="Desarrollo de sitios web single page application (SPA), server sider render (SSR), landing pages, etc."
    badge="Vue, React, Angular, Bootstrap"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Mobile Developer"
    img="/mobile_development.png"
    desc="Desarrollo de apliaciones móviles para android & iOS."
    badge="Dart, Flutter"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Database Manager"
    img="/database_manager.png"
    desc="Arquitectura de bases de datos, mantenimiento, consultas y triggering."
    badge="MongoDB, PostgreSQL, Redis, Sqlite"
  />
  <HorizontalCard
    title="Cloud Engineer"
    img="/cloud.png"
    desc="Application deployer, logger watcher, configuración de servidores y servicios en la nube."
    badge="Linux Server, Google Cloud, AWS Cloud"
  />
</BaseLayout>
